    "def solution(price, money, count):\n",
    "    answer = -1\n",
    "\n",
    "    res = 0\n",
    "    for i in range(1, count+1):\n",
    "        res+=price*i\n",
    "    \n",
    "    res = res-money\n",
    "    answer = res if res > 0 else 0\n",
    "    return answer\n",
    "\n",
    "price, money, count = map(int, input().split())\n",
    "print(solution(price, money, count))"
   ]
  }
